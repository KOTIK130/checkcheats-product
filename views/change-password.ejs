<!-- views/change-password.ejs -->
<div class="card" style="max-width: 500px; margin: 40px auto;">
  <h1 style="text-align: center;">Смена пароля</h1>
  <form method="post" action="/change-password" style="display: grid; gap: 12px;">
    <input class="input" type="password" name="oldPassword" placeholder="Старый пароль" required>
    <input class="input" type="password" name="newPassword" placeholder="Новый пароль (мин. 6)" required>
    <button class="btn" type="submit">Сменить</button>
    <% if (msg) { %><div class="alert"><%= msg %></div><% } %>
  </form>
</div>
