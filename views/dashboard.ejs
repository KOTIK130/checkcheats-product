<%- include('header') -%>
<style>
.player-scanner {
    max-width: 1000px;
    margin: 40px auto;
}
.scanner-title {
    text-align: center;
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 10px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}
.scanner-subtitle {
    text-align: center;
    color: var(--text-secondary);
    margin-bottom: 40px;
    font-size: 1.2rem;
}
.search-container {
    background: var(--card);
    border-radius: 15px;
    padding: 30px;
    margin-bottom: 30px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
}
.search-box-wrapper {
    display: flex;
    gap: 15px;
    align-items: center;
}
.search-input {
    flex: 1;
    padding: 15px 20px;
    font-size: 1.1rem;
    background: rgba(255, 255, 255, 0.05);
    border: 2px solid rgba(102, 126, 234, 0.3);
    border-radius: 10px;
    color: var(--text);
    transition: all 0.3s;
}
.search-input:focus {
    outline: none;
    border-color: #667eea;
    box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
    background: rgba(255, 255, 255, 0.08);
}
.search-input::placeholder {
    color: rgba(255, 255, 255, 0.4);
}
.search-btn {
    padding: 15px 40px;
    font-size: 1.1rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: none;
    border-radius: 10px;
    color: white;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
}
.search-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
}
.players-table-container {
    background: var(--card);
    border-radius: 15px;
    padding: 30px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
}
.table-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 20px;
    color: var(--text);
}
.players-table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0 10px;
}
.players-table thead th {
    background: rgba(102, 126, 234, 0.1);
    padding: 15px 20px;
    text-align: left;
    color: #667eea;
    font-weight: 600;
    font-size: 1.05rem;
}
.players-table thead th:first-child {
    border-top-left-radius: 10px;
    border-bottom-left-radius: 10px;
}
.players-table thead th:last-child {
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;
}
.players-table tbody tr {
    background: rgba(255, 255, 255, 0.02);
    transition: all 0.3s;
}
.players-table tbody tr:hover {
    background: rgba(102, 126, 234, 0.05);
    transform: scale(1.02);
}
.players-table tbody td {
    padding: 18px 20px;
    color: var(--text);
    font-size: 1rem;
}
.players-table tbody tr td:first-child {
    border-top-left-radius: 10px;
    border-bottom-left-radius: 10px;
}
.players-table tbody tr td:last-child {
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;
}
.status-badge {
    display: inline-block;
    padding: 8px 20px;
    border-radius: 20px;
    font-weight: 700;
    font-size: 0.95rem;
    text-transform: uppercase;
    letter-spacing: 1px;
}
.status-clean {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    color: white;
    box-shadow: 0 4px 15px rgba(16, 185, 129, 0.4);
}
.status-cheater {
    background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
    color: white;
    box-shadow: 0 4px 15px rgba(239, 68, 68, 0.4);
}
.status-scanning {
    background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
    color: white;
    box-shadow: 0 4px 15px rgba(245, 158, 11, 0.4);
}
.status-pending {
    background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
    color: white;
    box-shadow: 0 4px 15px rgba(107, 114, 128, 0.4);
}
.player-name {
    font-weight: 600;
    font-size: 1.1rem;
}
.empty-state {
    text-align: center;
    padding: 60px 20px;
    color: var(--text-secondary);
}
.empty-state i {
    font-size: 4rem;
    margin-bottom: 20px;
    opacity: 0.3;
}
.empty-state p {
    font-size: 1.2rem;
}
</style>

<div class="player-scanner">
    <h1 class="scanner-title">Личный кабинет</h1>
    <p class="scanner-subtitle">Управление проверками</p>

    <div class="search-container">
        <div class="search-box-wrapper">
            <input 
                type="text" 
                id="playerSearchInput" 
                class="search-input" 
                placeholder="Введите никнейм игрока для проверки..."
                autocomplete="off"
            >
            <button class="search-btn" onclick="searchPlayer()">
                <i class="fas fa-search"></i> Найти
            </button>
        </div>
    </div>

    <div class="players-table-container">
        <h3 class="table-title">
            <i class="fas fa-list"></i> История проверок
        </h3>
        
        <% if (sessions && sessions.length > 0) { %>
            <table class="players-table">
                <thead>
                    <tr>
                        <th>Игрок</th>
                        <th>Статус</th>
                        <th>Дата проверки</th>
                    </tr>
                </thead>
                <tbody>
                    <% sessions.forEach(session => { %>
                        <tr>
                            <td class="player-name"><%= session.suspectId || 'Player_' + session.code.slice(0, 6) %></td>
                            <td>
                                <% if (session.status === 'completed') { %>
                                    <span class="status-badge status-clean">CLEAN</span>
                                <% } else if (session.status === 'active') { %>
                                    <span class="status-badge status-scanning">SCANNING</span>
                                <% } else { %>
                                    <span class="status-badge status-pending">PENDING</span>
                                <% } %>
                            </td>
                            <td><%= new Date(session.createdAt).toLocaleString('ru-RU') %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <div class="empty-state">
                <i class="fas fa-inbox"></i>
                <p>Нет проверок</p>
                <p style="font-size: 1rem; margin-top: 10px;">Введите никнейм игрока в поле поиска выше</p>
            </div>
        <% } %>
    </div>
</div>

<script>
function searchPlayer() {
    const input = document.getElementById('playerSearchInput');
    const query = input.value.trim();
    
    if (!query) {
        alert('Введите никнейм игрока');
        return;
    }
    
    // TODO: Implement actual search
    alert('Поиск игрока: ' + query + '\n\n(Функционал в разработке)');
}

// Enter key support
document.getElementById('playerSearchInput').addEventListener('keypress', function(e) {
    if (e.key === 'Enter') {
        searchPlayer();
    }
});
</script>

<%- include('footer') %>
