<%- include('header') -%>
<div class="row fade-in-up">
    <div class="col-md-3 mb-4">
        <div class="card text-center">
            <div class="card-body">
                <div class="mb-3">
                    <div style="width: 100px; height: 100px; margin: 0 auto; border-radius: 50%; background: linear-gradient(135deg, #4A90E2, #357ABD); display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-user fa-3x" style="color: white;"></i>
                    </div>
                </div>
                <h4 class="mb-1"><%= user.username %></h4>
                <p class="text-secondary mb-3">
                    <i class="fas fa-shield-alt"></i> <%= user.role === 'admin' ? 'Администратор' : 'Пользователь' %>
                </p>
                <div class="d-grid gap-2">
                    <a href="/change-password" class="btn btn-primary">
                        <i class="fas fa-key"></i> Сменить пароль
                    </a>
                    <a href="/logout" class="btn btn-danger">
                        <i class="fas fa-sign-out-alt"></i> Выход
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        <div class="row mb-4">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="icon me-3">
                                <i class="fas fa-check-circle"></i>
                            </div>
                            <div>
                                <h6 class="text-secondary mb-1">Активные сессии</h6>
                                <h3 class="mb-0"><%= sessions.length %></h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="icon me-3">
                                <i class="fas fa-clock"></i>
                            </div>
                            <div>
                                <h6 class="text-secondary mb-1">Последний вход</h6>
                                <h6 class="mb-0"><%= user.lastLogin ? new Date(user.lastLogin).toLocaleDateString('ru') : 'Сегодня' %></h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="icon me-3">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div>
                                <h6 class="text-secondary mb-1">Email</h6>
                                <h6 class="mb-0"><%= user.email %></h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-history"></i> Последние сессии</h5>
            </div>
            <div class="card-body">
                <% if (sessions && sessions.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Код</th>
                                    <th>Статус</th>
                                    <th>Дата</th>
                                    <th>Действие</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% sessions.forEach(session => { %>
                                    <tr>
                                        <td><code><%= session.code %></code></td>
                                        <td>
                                            <span class="badge bg-<%= session.status === 'completed' ? 'success' : session.status === 'active' ? 'primary' : 'secondary' %>">
                                                <%= session.status %>
                                            </span>
                                        </td>
                                        <td><%= new Date(session.createdAt).toLocaleString('ru') %></td>
                                        <td>
                                            <button class="btn btn-sm btn-info" onclick="viewSession('<%= session.code %>')">
                                                <i class="fas fa-eye"></i> Просмотр
                                            </button>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-5">
                        <i class="fas fa-inbox fa-3x text-secondary mb-3"></i>
                        <p class="text-secondary">Сессии отсутствуют</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<script>
function viewSession(code) {
    alert('Просмотр сессии: ' + code);
}
</script>

<style>
.icon {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    background: linear-gradient(135deg, #4A90E2, #357ABD);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 15px rgba(74, 144, 226, 0.3);
}
.icon i {
    color: white;
    font-size: 1.25rem;
}
.fade-in-up {
    animation: fadeInUp 0.6s ease;
}
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}
</style>

<%- include('footer') %>