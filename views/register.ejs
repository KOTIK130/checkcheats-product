<!-- views/register.ejs -->
<h1>Регистрация</h1>
<div class="card" style="max-width:520px; margin:0 auto;">
  <form method="post" action="/register">
    <div style="display:grid; gap:10px;">
      <input class="input" name="email" placeholder="Email" required autocomplete="email">
      <input class="input" name="username" placeholder="Логин" required autocomplete="username">
      <input class="input" type="password" name="password" placeholder="Пароль (мин. 6)" required autocomplete="new-password">
      <% if (error) { %><div class="alert"><%= error %></div><% } %>
      <button class="btn" type="submit">Создать</button>
    </div>
  </form>
</div>
