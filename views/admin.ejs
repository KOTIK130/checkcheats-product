<%- include('header') -%>
<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header">
                <h4 class="mb-0"><i class="fas fa-shield-alt"></i> Админ панель</h4>
            </div>
            <div class="card-body">
                <div class="row g-3 mb-4">
                    <div class="col-md-4">
                        <div class="card bg-primary">
                            <div class="card-body text-center">
                                <i class="fas fa-users fa-3x mb-2"></i>
                                <h3><%= users.length %></h3>
                                <p class="mb-0">Пользователей</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-success">
                            <div class="card-body text-center">
                                <i class="fas fa-check-circle fa-3x mb-2"></i>
                                <h3><%= stats.totalSessions %></h3>
                                <p class="mb-0">Всего сессий</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-info">
                            <div class="card-body text-center">
                                <i class="fas fa-chart-line fa-3x mb-2"></i>
                                <h3><%= stats.totalScans %></h3>
                                <p class="mb-0">Сканирований</p>
                            </div>
                        </div>
                    </div>
                </div>

                <h5 class="mb-3"><i class="fas fa-users-cog"></i> Управление пользователями</h5>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Пользователь</th>
                                <th>Email</th>
                                <th>Роль</th>
                                <th>Дата регистрации</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(u => { %>
                                <tr>
                                    <td><%= u.username %></td>
                                    <td><%= u.email %></td>
                                    <td>
                                        <span class="badge bg-<%= u.role === 'admin' ? 'danger' : 'primary' %>">
                                            <%= u.role %>
                                        </span>
                                    </td>
                                    <td><%= new Date(u.createdAt).toLocaleDateString('ru') %></td>
                                    <td>
                                        <button class="btn btn-sm btn-warning" onclick="changeRole('<%= u._id %>')">
                                            <i class="fas fa-edit"></i> Роль
                                        </button>
                                        <button class="btn btn-sm btn-danger" onclick="deleteUser('<%= u._id %>')">
                                            <i class="fas fa-trash"></i> Удалить
                                        </button>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function changeRole(id) {
    const role = prompt('Введите роль (user/admin):');
    if (role) {
        fetch(`/api/admin/change-role/${id}`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ role }),
            credentials: 'include'
        }).then(() => location.reload());
    }
}

function deleteUser(id) {
    if (confirm('Удалить пользователя?')) {
        fetch(`/api/admin/delete-user/${id}`, {
            method: 'POST',
            credentials: 'include'
        }).then(() => location.reload());
    }
}
</script>
<%- include('footer') %>